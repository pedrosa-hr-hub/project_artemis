{{#each postagens}}
<div class="card mt-4">
    <div class="card-body">
        <h3>{{titulo}}</h3>
        <p>{{descricao}}</p>
        <a href="/postagem/{{slug}}"><button class="btn btn-success">Leia mais</button></a>
        <hr>
        <small>{{categoria.nome}}</small>
        <br>
        <small>Data de Publicação: {{data}}</small>
    </div>
</div>
{{else}}
    <h2>Não há postagens</h2>
{{/each}}