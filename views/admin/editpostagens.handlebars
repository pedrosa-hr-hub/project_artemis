{{#each erros}}
    <div class="alert alert-danger">{{text}}</div>
{{else}}
    
{{/each}}
<h3>EDITAR POSTAGEM</h3>

<div class="card">
    
    <div class="card-body">
        <form action="/adm/postagens/edit" method="POST">
            <input type="hidden" name="id" value="{{postagens._id}}">
            <label for="titulo">Título:</label>
            <input type="text" id="titulo" name="titulo" placeholder="Título da postagem" class="form-control" value="{{postagens.titulo}}">
            <label for="slug">Slug:</label>
            <input type="text" id="slug" name="slug" placeholder="Slug da postagem" class="form-control" value="{{postagens.slug}}">
            <label for="descricao">Descrição:</label>
            <input type="text" id="descricao" name="descricao" placeholder="Descrição da postagem" class="form-control" value="{{postagens.descricao}}">
            <label for="conteudo">Conteúdo:</label>
            <textarea name="conteudo" cols="30" rows="10" class="form-control">{{postagens.conteudo}}</textarea>
            <label for="categoria">Categoria: </label>
            <select name="categoria" class="form-control">
                {{#each categorias}}
                    <option value="{{_id}}">{{nome}}</option>
                {{else}}
                    <option value="0">Nenhuma registrada</option>
                {{/each}}
            </select>
            <br>
            <button type="submit" class="btn btn-dark">EDITAR CATEGORIA</button>
        </form>
    </div>
</div>