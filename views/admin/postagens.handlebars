<h2>Lista de postagens:</h2>
<hr>
<a href="/adm/postagens/add"><button class="btn btn-dark">NOVA POSTAGEM</button></a>
<hr>

{{#each postagens}}
<br>
    <div class="card">
        <div class="card-body">
            <h4>{{titulo}}</h4>
            <p>Descrição: {{descricao}}</p>
            <small>Data: {{data}}</small>
            <br>
            <small>Categoria: {{categoria.nome}}</small>
            <br>
            <a href="/adm/postagens/edit/{{_id}}"><button class="btn btn-success mt-4">EDITAR</button></a>
            <form action="/adm/postagens/deletar" method="post">
                <input type="hidden" name="id" value="{{_id}}">
                <button type="submit" class="btn btn-danger mt-4">DELETAR CATEGORIA</button>
            </form>
        </div>
    </div>
{{else}}
    <p>NENHUMA POSTAGEM FEITA...</p>
{{/each}}