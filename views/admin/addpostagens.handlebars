{{#each erros}}
    <div class="alert alert-danger">{{text}}</div>
{{else}}
    <div class="alert alert-sucess">{{text}}</div>
{{/each}}
<div class="card">
    <div class="card-body">
        <h4>NOVA POSTAGEM</h4>
        <form action="/adm/postagens/nova" method="POST">
            <label for="titulo">Titulo:</label>
            <input type="text" name="titulo" class="form-control">
            <label for="slug">Slug:</label>
            <input type="text" name="slug" class="form-control">
            <label for="descrição">Descrição:</label>
            <input type="text" name="descricao" class="form-control">
            <label for="conteudo">Conteúdo:</label>
            <textarea name="conteudo" cols="30" rows="10" class="form-control"></textarea>
            <br>
            <label for="categoria">Categoria: </label>
            <select name="categoria" class="form-control">
                {{#each categoria}}
                    <option value="{{_id}}">{{nome}}</option>
                {{else}}
                    <option value="0">Nenhuma registrada</option>
                {{/each}}
            </select>
            <br>
            <button type="submit" class="btn btn-success mt-4">CRIAR POSTAGEM</button>
        </form>
    </div>
</div>